#!/bin/bash

set -e
set -o pipefail

export ROOT_DIR="$PWD"

function build {
    echo "build"
}

function simulate {
    echo "simulate"

}

function clean {
    rm -rf "$ROOT_DIR/.reco-work"
}

function main {
    case "$1" in
        "build")
            build "${@:2}"
            ;;
        "simulate")
            simulate "${@:2}"
            ;;
        "clean")
            clean "${@:2}"
            ;;
        *)
            echo "unrecognized command: $1";
            exit 1
            ;;
        esac
}

main "$@"