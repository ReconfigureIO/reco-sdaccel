#!/bin/bash

set -e
set -o pipefail

export DIR
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

export ROOT_DIR="$PWD"

function build {
    make -f "$DIR/reco-sdaccel.mk" TARGET=hw_emu kernel
}

function image {
    make -f "$DIR/reco-sdaccel.mk" TARGET=hw kernel
}

function test_go {
    make -f "$DIR/reco-sdaccel.mk" verilog
}

function simulate {
    echo "simulate"
}

function cmds {
    make -f "$DIR/reco-sdaccel.mk" cmds
}

function clean {
    make -f "$DIR/reco-sdaccel.mk" clean
}

function main {
    case "$1" in
        "build")
            build "${@:2}"
            ;;
        "simulate")
            simulate "${@:2}"
            ;;
        "image")
            image "${@:2}"
        "cmds")
            cmds "${@:2}"
            ;;
        "test-go")
            test_go "${@:2}"
            ;;
        "clean")
            clean "${@:2}"
            ;;
        *)
            echo "unrecognized command: $1";
            exit 1
            ;;
        esac
}

main "$@"
