{
    "networkMode": "bridge",
    "family": "josh-test-vivado",
    "placementConstraints": [],
    "volumes": [
        {
            "host": {
                "sourcePath": "/opt/Xilinx"
            },
            "name": "xilinx"
        },
        {
            "host": {
                "sourcePath": "/home/centos/src/license"
            },
            "name": "license"
        }

    ],
    "containerDefinitions": [
        {
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "josh-test-sdaccel",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "hello"
                }
            },
            "environment": [
                {
                    "name": "XILINXD_LICENSE_FILE",
                    "value": "/opt/xilinx-license/XilinxAWS.lic"
                },
                {
                    "name": "XILINX_VIVADO",
                    "value": "/opt/Xilinx/Vivado/2016.3"
                }
            ],
            "name": "test-vivado",
            "mountPoints": [
                {
                    "sourceVolume": "xilinx",
                    "containerPath": "/opt/Xilinx"
                },
                {
                    "sourceVolume": "license",
                    "containerPath": "/opt/xilinx-license"
                }
            ],
            "image": "398048034572.dkr.ecr.us-east-1.amazonaws.com/reconfigureio/build-framework/sdaccel-builder:v0.3.0",
            "cpu": 0,
            "portMappings": [],
            "entryPoint": [
                "bash"
            ],
            "memory": 16000,
            "command": [
                "-c",
                "export PATH=/opt/Xilinx/Vivado/2016.3/bin:$PATH && apt-get update && apt-get install -y git && git clone https://github.com/ReconfigureIO/examples.git && cd examples/addition && /opt/sdaccel-builder/sdaccel-builder build"
            ],
            "essential": true,
            "volumesFrom": []
        }
    ]
}
